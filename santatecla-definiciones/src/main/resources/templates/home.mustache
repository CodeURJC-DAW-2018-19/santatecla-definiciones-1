{{>header}}
		<!-- Searchbar -->
		<div class="row">
			<div class="col-lg">
				<div class="box">
					<div class="container-1">
						<span class="icon"><i class="fa fa-search"></i></span> <!-- class="fa fa-search" -->
						<input type="search" id="search" placeholder="Búsqueda" />
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg">
				<div class="card">
					<div class="card-body">
						<div class="tab-content">
							<div class="tab-pane active" id="home">
								<div id="accordion" role="tablist">
									<script src="/assets/js/loadchapters.js"></script>
									<script>loadchapters()</script>
								</div>
							</div>
						</div>
						{{#docente}}
						<div class="addQuestionSeeDiagram">
							<button type="button" class="btn btn-primary btn-fab btn-fab-mini btn-round" data-toggle="modal" data-target="#addChapterModal">
								<i class="material-icons">add</i>
							</button>
						</div>
						{{/docente}}
						<button type="button" class="btn btn-primary" id="showMoreBtn" data-target="#showMore">
							Más resultados
						</button>
						<div id="loadGif"></div>
						<script type="text/javascript">
							$(document).ready(function (){
								$('#showMoreBtn').click(function (){
									loadchapters();
								});
							});
						</script>
						<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#diagramModal">Diagrama</button>
					</div>
				</div>
			</div>
		</div>
	<div class="modal fade" id="diagramModal" tabindex="-1" role="dialog" aria-labelledby="diagramModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-diagram">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="diagramModalLabel">Diagrama de resultados</h5>
				</div>
				<div class="modal-body">
					<div id="diagram" style="height:400px; width: 400px"></div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
				</div>
			</div>
		</div>
	</div>
	<div class="modal fade" id="addChapterModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <form action="/addChapter" method="post">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="exampleModalLabel">Inserte un nuevo capitulo</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	      	<p>Nombre</p>
	      	<input type="text" name="chapterName">
		      <div class="modal-footer">
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
		        <button type="submit" class="btn btn-primary">Guardar</button>
		      </div>
	      <input type="hidden" name="_csrf" value={{csrfToken}}>
	    </div>
	    </form>
	  </div>
	<script src="/assets/js/diagramdummy.js" type="text/javascript"></script>
{{>footer}}
