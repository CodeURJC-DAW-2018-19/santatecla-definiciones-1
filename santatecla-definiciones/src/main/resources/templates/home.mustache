{{>header}}
<!-- Searchbar -->
<div class="row">
	<div class="col-lg">
		<div class="box">
			<div class="container-1">
				<span class="icon"><i class="fa fa-search"></i></span> <!-- class="fa fa-search" -->
				<input type="search" id="search" placeholder="BÃºsqueda" />
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg">
		<div class="card">
			<div class="card-body">
				<div class="tab-content">
					<div class="tab-pane active" id="home">
						<div id="accordion" role="tablist">
							{{#chapters}}
							<div class="card card-collapse">
								<div class="card-header card-header-warning" role="tab" id="{{chapterName}}">
									<h5 class="mb-0 card-title">
										<a class="collapsed" data-toggle="collapse" href="#collapse{{chapterName}}" aria-expanded="false"
										 aria-controls="collapse{{chapterName}}">
											<i class="material-icons">keyboard_arrow_right</i>
											{{chapterName}}
										</a>
									</h5>
								</div>
								<div id="collapse{{chapterName}}" class="collapse" role="tabpanel" aria-labelledby="{{chapterName}}"
								 data-parent="#accordion">
									<div class="card-body">
										{{#concepts}}
										<ul>
											<li><a href="/concept">{{conceptName}}</a></li>
										</ul>
										{{/concepts}}
										{{#docente}}
										<div class="addQuestionSeeDiagram">
											<button type="button" class="btn btn-primary btn-fab btn-fab-mini btn-round" data-toggle="modal" data-target="#exampleModal">
												<i class="material-icons">add</i>
											</button>
										</div>
										{{/docente}}
									</div>
								</div>
							</div>
							<br />
							{{/chapters}}
							{{^chapters}}
							<span>No hay temas disponibles.</span>
							{{/chapters}}
							{{#docente}}
							<div class="addQuestionSeeDiagram">
								<button type="button" class="btn btn-primary btn-fab btn-fab-mini btn-round" data-toggle="modal" data-target="#exampleModal">
									<i class="material-icons">add</i>
								</button>
							</div>
							{{/docente}}
						</div>
					</div>
				</div>
				<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#diagramModal">Diagrama</button>
			</div>
		</div>
	</div>
</div>
</div>
<div class="modal fade" id="diagramModal" tabindex="-1" role="dialog" aria-labelledby="diagramModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-diagram">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="diagramModalLabel">Diagrama de resultados</h5>
			</div>
			<div class="modal-body">
				<div id="diagram" style="height:400px; width: 400px"></div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
			</div>
		</div>
	</div>
</div>
<script src="assets/js/diagramdummy.js" type="text/javascript"></script>
{{>footer}}