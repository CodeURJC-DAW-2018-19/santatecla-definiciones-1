<div class="correctedAnswers">
  {{#marked}}
  <form id="modifyForm{{id}}" action="/modifyAnswer/{{ conceptName }}/{{ id }}" method="post">
  {{/marked}}
  {{^marked}}
  <form action="/mark/{{id}}" method="post">
  {{/marked}}
    <div class="uncorrectedAnswersJ">
      <input
        type="textarea"
        name="answerText"
        value="{{ answerText }}"
		required
      />
      <div class="correction">
        {{#marked}}
        <div class="form-check form-check-radio">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="correct"
            id="correct{{ id }}" value="yes" {{#correct}}checked{{/correct}} onclick="showJustification('incorrect{{ id }}', 'justificationAnswer{{id}}-0')">
            Correcta
            <span class="circle">
              <span class="check"></span>
            </span>
          </label>
        </div>
        <div class="form-check form-check-radio">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="correct"
            id="incorrect{{ id }}" value="no" {{^correct}}checked{{/correct}} onclick="showJustification('incorrect{{ id }}', 'justificationAnswer{{id}}-0')">
            Incorrecta
            <span class="circle">
              <span class="check"></span>
            </span>
          </label>
        </div>
      </div>
      <div class="uncorrectedAnswersButton">
        <button
          name="modifyAnswer"
          class="btn btn-primary btn-fab btn-fab-mini btn-round"
          data-toggle="modal"
		  onclick="document.getElementById('modifyForm{{id}}').submit()"
        >
          <i class="material-icons">build</i>
        </button>
        <a
          type="button"
          href='/delete/{{conceptName}}/{{ id }}'
          name="deleteAnswer"
          class="btn btn-primary btn-fab btn-fab-mini btn-round"
        >
          <i class="material-icons">delete</i>
        </a>
      </div>
      	{{^justifications}}
      <div class="justification justificationAnswer{{id}}-0" style="display:none">
          <p>JUSTIFICACIÓN:</p>
          <input
            type="textarea"
            name="justificationTextNew"
        required
          />
          <div class="justification2">
            <div class="form-check form-check-radio">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" name="validNew"
                id="valid{{id}}-0" value="yes" checked onclick="showError('invalid{{id}}-0')"
                /> Válida
                <span class="circle">
                  <span class="check"></span>
                </span>
              </label>
            </div>
            <div class="form-check form-check-radio">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" name="validNew"
                id="invalid{{id}}-0" value="no" onclick="showError('invalid{{id}}-0')"
                /> Inválida
                <span class="circle">
                  <span class="check"></span>
                </span>
              </label>
            </div>
            <input class="errorAnswer" {{#valid}}style="display: none"{{/valid}} type="textarea" value="{{#error}}{{ error }}{{/error}}" name="errorNew" required/>
          </div>
        </div>
      {{/justifications}}
      <input type="hidden" name="_csrf" value={{csrfToken}}>
      </form>
      {{/marked}}
      {{^marked}}
      <div class="form-check form-check-radio">
        <label class="form-check-label">
          <input
            class="form-check-input"
            type="radio"
            name="correct{{ id }}"
            id="correct{{ id }}"
            value="yes" onclick="showJustification('incorrect{{ id }}', 'justificationAnswer{{id}}-0')"
          />
          Correcta
          <span class="circle">
            <span class="check"></span>
          </span>
        </label>
      </div>
      <div class="form-check form-check-radio">
        <label class="form-check-label">
          <input
            class="form-check-input"
            type="radio"
            name="correct{{ id }}"
            id="incorrect{{ id }}"
            value="no" onclick="showJustification('incorrect{{ id }}', 'justificationAnswer{{id}}-0')"
          />
          Incorrecta
          <span class="circle">
            <span class="check"></span>
          </span>
        </label>
      </div>
    </div>
    <div class="uncorrectedAnswersButton">
      <button
        type="submit"
        class="btn btn-primary btn-fab btn-fab-mini btn-round"
        data-toggle="modal"
        data-target="#addAnswerModal"
      >
        <i class="material-icons">add</i>
      </button>
    </div>
    {{/marked}}
    {{#justifications}}
    <div class="justification" id="justificationAnswer{{#answer}}{{id}}{{/answer}}-0">
      <p>JUSTIFICACIÓN:</p>
      <input
        type="textarea"
        name="justificationText"
        value="{{ justificationText }}"
		required
      />
      <div class="justification2">
        <div class="form-check form-check-radio">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="valid"
            id="valid{{ id }}" value="yes" {{#marked}}{{#valid}}checked{{/valid}}{{/marked}} onclick="showError('invalid{{ id }}')"
            /> Válida
            <span class="circle">
              <span class="check"></span>
            </span>
          </label>
        </div>
        <div class="form-check form-check-radio">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="valid"
            id="invalid{{ id }}" value="no" {{#marked}}{{^valid}}checked{{/valid}}{{/marked}} onclick="showError('invalid{{ id }}')"
            /> Inválida
            <span class="circle">
              <span class="check"></span>
            </span>
          </label>
        </div>
        <input class="errorAnswer" {{#valid}}style="display: none"{{/valid}} type="textarea" value="{{#error}}{{ error }}{{/error}}" required/>
        <a
          class="btn btn-primary btn-fab btn-fab-mini btn-round"
          href="/modifyJust/{{conceptName}}/{{id}}?justificationText="
        >
          <i class="material-icons">build</i>
        </a>
        <a
          type="button"
          href='/deleteJust/{{conceptName}}/{{ id }}/{{#answer}}{{id}}{{/answer}}'
          name="deleteJustification"
          class="btn btn-primary btn-fab btn-fab-mini btn-round"
        >
          <i class="material-icons">delete</i>
        </a>
      </div>
    </div>
    {{/justifications}}
</div>
</div>
