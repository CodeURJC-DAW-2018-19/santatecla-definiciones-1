{{>header}}
{{#answer}}
<div class="row contentModify">
	<div class="card">
		<div class="card-header card-header-text card-header-primary">
			<div class="card-text">
				<h4 class="card-title">Modificar una respuesta</h4>
			</div>
		</div>
		<div class="card-body">
			<form action="/addModifiedAnswer/{{conceptName}}/{{id}}" method="POST">
				<div class="form-group">
					<label>Pregunta: </label>
					<p>{{questionText}}</p>
				</div>
				<div class="form-group">
					<label>Respuesta: </label>
					<input type="text" class="form-control" name="answerText" value="{{answerText}}">
				</div>
				{{#correct}}
				<div class="form-check form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="correctAnswer" checked>
						Correcta
						<span class="form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				<div class="form-check  form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="incorrectAnswer">
          				Incorrecta
          				<span class=" form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				{{/correct}}
				{{^correct}}
				<div class="form-check form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="correctAnswer" >
						Correcta
						<span class="form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				<div class="form-check  form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="incorrectAnswer" checked>
          				Incorrecta
          				<span class=" form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				{{/correct}}
				{{#justification}}
				<div class="form-group">
					<label>Justificación: </label>
					<input type="text" class="form-control" name="justificationText" value="{{justificationText}}">
				</div>
				{{#valid}}
				<div class="form-check form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="validJustification" checked>
						Valida
						<span class="form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				<div class="form-check  form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="invalidJustification">
          				Invalida
    				<span class=" form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				{{/valid}}
				{{^valid}}
				<div class="form-check form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="validJustification">
						Valida
						<span class="form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				<div class="form-check  form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="invalidJustification" checked>
          				Invalida
    				<span class=" form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				{{/valid}}
				{{/justification}}
				{{^justification}}
				<div class="form-group">
					<label>Justificación: </label>
					<input type="text" class="form-control" name="justificationText" placeholder="Introduzca una justificacion">
				</div>
				<div class="form-check form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="validJustification">
						Valida
						<span class="form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				<div class="form-check  form-check-inline">
					<label class="form-check-label">
						<input class="form-check-input" type="checkbox" name="invalidJustification">
          	Invalida
    				<span class=" form-check-sign">
							<span class="check"></span>
						</span>
					</label>
				</div>
				{{/justification}}
				<br>
				<button type="submit" class="btn btn-primary">Añadir</button>
				<input type="hidden" name="_csrf" value={{csrfToken}}>
			</form>
		</div>
	</div>
</div>
{{/answer}}
{{>footer}}
